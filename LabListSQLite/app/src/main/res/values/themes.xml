<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LabList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_600</item>
        <item name="colorPrimaryVariant">@color/material_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_600</item>
        <item name="colorSecondaryVariant">@color/red_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="textInputStyle">@style/InputStyle</item>
        <item name="itemBackgroundColor">@color/white</item>
        <item name="navigationViewBackground">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="navigationViewBackground">@color/activityBackground</item>
        <item name="itemBackgroundColor">@color/itemBackground</item>
        <item name="android:itemBackground">@color/itemBackground</item>
        <item name="actionBarColor">@color/itemBackground</item>
        <item name="colorPrimaryDark">#202020</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/button</item>
        <item name="colorSecondary">@color/button</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/TitleTextStyle</item>
        <item name="editTextStyle">@style/CustomEditStyle</item>
        <item name="textInputStyle">@style/CustomInputStyle</item>
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="alertDialogTheme">@style/MyDialogTheme</item>
    </style>

    <declare-styleable name="bg">
        <attr name="itemBackgroundColor" format="color"/>
        <attr name="navigationViewBackground" format="color"/>
        <attr name="actionBarColor" format="color"/>
    </declare-styleable>

    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.LabList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LabList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LabList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="InputStyle" parent="Widget.Design.TextInputLayout">
        <item name="background">@color/white</item>
    </style>

</resources>