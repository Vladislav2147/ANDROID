<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LabList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_600</item>
        <item name="colorPrimaryVariant">@color/material_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_600</item>
        <item name="colorSecondaryVariant">@color/red_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="textInputStyle">@style/InputStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LabList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LabList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LabList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="InputStyle" parent="Widget.Design.TextInputLayout">
        <item name="background">@color/white</item>
    </style>

</resources>