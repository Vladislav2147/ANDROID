<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionBarColor">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="itemBackgroundColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="itemBackgroundColor">@color/itemBackground</item>
        <item name="android:itemBackground">@color/itemBackground</item>
        <item name="actionBarColor">@color/itemBackground</item>
        <item name="colorPrimaryDark">#202020</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/button</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/TitleTextStyle</item>
    </style>

    <style name="MarginStyle">
        <item name="android:layout_margin">8dp</item>
    </style>

    <declare-styleable name="bg">
        <attr name="itemBackgroundColor" format="color"/>
        <attr name="actionBarColor" format="color"/>
    </declare-styleable>

    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>